package WhileLoopAdditionalExercises;

import java.util.Scanner;

public class AverageNumber_05 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int amountNumbers = Integer.parseInt(scanner.nextLine());
        double totalSum = 0;
        double averageSum = 0;


        for (int i = 1; i <= amountNumbers; i++) {
            int n = Integer.parseInt(scanner.nextLine());

            totalSum += n;

            averageSum = totalSum / amountNumbers;
        }

        System.out.printf("%.2f", averageSum);
    }
}
