package VtoriModulZadachi;

import java.util.Scanner;
import java.util.Stack;

public class Exercises {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int yearlyTax = Integer.parseInt(scanner.nextLine());
        double shoes = yearlyTax - (yearlyTax * 0.40);
        double clothes = shoes - (shoes * 0.20);
        double ball = clothes / 4;
        double accessories = ball / 5;
        double totalPrice = yearlyTax + shoes + clothes + ball + accessories;
        System.out.println(totalPrice);




    }
}



